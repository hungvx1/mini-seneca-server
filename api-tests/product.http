@baseUrl = http://localhost:3000
@productId = REPLACE_WITH_PRODUCT_ID

###
# 1. List all products
# Optional query params: category, page, limit
GET {{baseUrl}}/api/products?category=furniture&page=1&limit=10

###
# 2. Get a product by ID
GET {{baseUrl}}/api/products/{{productId}}

###
# 3. Update product
# Optional fields: name, sku, category, price
PATCH {{baseUrl}}/api/products/{{productId}}
Content-Type: application/json

{
  "name": "Office Chair",
  "sku": "CHAIR-001",
  "category": "furniture",
  "price": 129.99
}

###
# 4. Delete product
DELETE {{baseUrl}}/api/products/{{productId}}

###
# 5. Count products
# Optional query params: category
GET {{baseUrl}}/api/products/count?category=office

###
# 6. Create product
POST {{baseUrl}}/api/products
Content-Type: application/json

{
  "name": "Desk Lamp",
  "sku": "LAMP-001",
  "category": "office",
  "price": 29.99,
  "lowStockThreshold": 5
}

